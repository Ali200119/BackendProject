@model LoginVM

@{
    ViewBag.Title = "Login";
}

<section class="h-100 bg-dark">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0" style="display: flex; justify-content: center">
            <form method="post">
                <div class="col-xl-10">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase">Login</h3>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="email" id="form3Example1m" asp-for="Email" class="form-control form-control-lg" />
                      <span class="text-danger" asp-validation-for="Email"></span>
                      <label class="form-label" asp-for="Email"></label>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="password" id="form3Example1n" asp-for="Password" class="form-control form-control-lg" />
                      <span class="text-danger" asp-validation-for="Password"></span>
                      <label class="form-label" asp-for="Password"></label>
                    </div>
                  </div>
                  <span>
                      <input type="checkbox" asp-for="RememberMe"/>
                    <label asp-for="RememberMe">Remember me</label>
                  </span>
                </div>

                <div class="d-flex justify-content-end pt-3">
                  <button type="submit" class="btn btn-warning btn-lg ms-2">Login</button>
                </div>
              </div>
            </div>
           </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}