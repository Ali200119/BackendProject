@model RegisterVM

@{
    ViewBag.Title = "Registration";
}

<section class="h-100 bg-dark">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0" style="display: flex; justify-content: center">
            <form method="post">
                <div class="col-xl-10">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase">Registration</h3>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="text" id="form3Example1m" asp-for="FirstName" class="form-control form-control-lg" />
                      <span class="text-danger" asp-validation-for="FirstName"></span>
                      <label class="form-label" asp-for="FirstName">First name</label>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="text" id="form3Example1n" asp-for="LastName" class="form-control form-control-lg" />
                      <span class="text-danger" asp-validation-for="LastName"></span>
                      <label class="form-label" asp-for="LastName">Last name</label>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="text" id="form3Example1m1" asp-for="Username" class="form-control form-control-lg" />
                      <span class="text-danger" asp-validation-for="Username"></span>
                      <label class="form-label" asp-for="Username"></label>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input type="number" id="form3Example1n1" asp-for="Age" class="form-control form-control-lg" />
                      <span class="text-danger" asp-validation-for="Age"></span>
                      <label class="form-label" asp-for="Age"></label>
                    </div>
                  </div>
                </div>

                <div class="form-outline mb-4">
                  <input type="email" id="form3Example8" asp-for="Email" class="form-control form-control-lg" />
                  <span class="text-danger" asp-validation-for="Email"></span>
                  <label class="form-label" asp-for="Email"></label>
                </div>

                <div class="form-outline mb-4">
                  <input type="password" id="form3Example9" asp-for="Password" class="form-control form-control-lg" />
                  <span class="text-danger" asp-validation-for="Password"></span>
                  <label class="form-label" asp-for="Password"></label>
                </div>

                <div class="form-outline mb-4">
                  <input type="password" id="form3Example90" asp-for="RepeatPassword" class="form-control form-control-lg" />
                  <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                  <label class="form-label" asp-for="RepeatPassword">Repeat Password</label>
                </div>

                <div class="d-flex justify-content-end pt-3">
                  <button type="reset" class="btn btn-light btn-lg">Reset all</button>
                  <button type="submit" class="btn btn-warning btn-lg ms-2">Register</button>
                </div>
              </div>
            </div>
           </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>